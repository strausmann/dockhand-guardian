{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "guardian",
        "docker",
        "compose",
        "webhook",
        "monitoring",
        "recovery",
        "ci",
        "deps",
        "docs",
        "config",
        "release"
      ]
    ],
    "scope-empty": [2, "never"],
    "subject-empty": [2, "never"],
    "type-empty": [2, "never"]
  }
}
